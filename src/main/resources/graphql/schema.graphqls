type Query {
    getEntry(entryId: ID!, tenantId: String): Entry
    getEntries(first: Int!, after: String, tenantId: String, query: String, tag: String, categories: [String], createdBy: String, updatedBy: String): EntryConnection
}

type Entry {
    entryId: ID
    content: String
    frontMatter: FrontMatter
    created: Author
    updated: Author
}

type FrontMatter {
    title: String
    categories: [Category]
    tags: [Tag]
}

type Category {
    name: String
}

type Tag {
    name: String
}

type Author {
    name: String
    date: String
}

type PageInfo {
    startCursor: String
    endCursor: String
    hasNextPage: Boolean
    hadPreviousPage: Boolean
}

type EntryEdge {
    node: Entry
    cursor: String
}

type EntryConnection {
    edges: [EntryEdge]
    pageInfo: PageInfo
}